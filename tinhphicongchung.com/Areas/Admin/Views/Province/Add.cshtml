@using tinhphicongchung.com.helper
@using tinhphicongchung.com.library
@model ProvinceEditVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="page-body">
    <div class="container-xl">
        <div class="row">
            <div class="col-12 col-md-3 px-4"></div>
            <div class="col-12 col-md-6">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Thêm Tỉnh / Thành phố</h3>
                            </div>
                            <div class="card-body">
                                @using (Html.BeginForm("Add", "Province", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group mb-3 row">
                                        <label class="col-3 col-form-label required">Tên Tỉnh / Thành phố</label>
                                        <div class="col">
                                            @Html.TextBoxFor(t => t.Name, new { @class = "form-control", autocomplete = "new-password" })
                                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group mb-3 row">
                                        <label class="col-3 col-form-label">Mô tả</label>
                                        <div class="col">
                                            @Html.TextBoxFor(t => t.Description, new { @class = "form-control", autocomplete = "new-password" })
                                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group mb-3 row">
                                        <label class="col-3 col-form-label">Trạng thái</label>
                                        <div class="col">
                                            @Html.DropDownListFor(m => m.StatusId, new SelectList(Model.StatusList, "StatusId", "Description", Model.StatusId), new { @class = "form-control select2" })
                                        </div>
                                    </div>
                                    <div class="form-group mb-3 row">
                                        <label class="col-3 col-form-label">Thứ tự hiển thị</label>
                                        <div class="col">
                                            @Html.TextBoxFor(t => t.DisplayOrder, new { @class = "form-control display-order" })
                                            @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group mb-3 row">
                                        <div class="col-3 col-form-label"></div>
                                        <div class="col">
                                            <label class="form-check form-check-inline">
                                                @if (Model.AddAnother)
                                                {
                                                    <input name="AddAnother" value="true" class="form-check-input" type="checkbox" checked="checked" />
                                                }
                                                else
                                                {
                                                    <input name="AddAnother" value="true" class="form-check-input" type="checkbox" />
                                                }
                                                <span class="form-check-label">Thêm tiếp dữ liệu khác</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="d-flex">
                                            <a href="javascript:void(0)" title="Quay lại" data-url="@Url.Action("Index", "Province", new { Area = "Admin" })" class="btn btn-link go-back">Quay lại</a>
                                            <button type="submit" class="btn btn-primary ms-auto">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-device-floppy" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <path d="M6 4h10l4 4v10a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2"></path>
                                                    <circle cx="12" cy="14" r="2"></circle>
                                                    <polyline points="14 4 14 8 8 8 8 4"></polyline>
                                                </svg>
                                                Thêm mới
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-3 px-4"></div>
        </div>
    </div>
</div>

