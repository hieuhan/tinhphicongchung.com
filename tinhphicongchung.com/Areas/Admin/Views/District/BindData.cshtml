@using tinhphicongchung.com.helper
@using tinhphicongchung.com.library
@model DistrictVM
<div class="col">
    <div class="page-pretitle">
        Danh sách Quận / Huyện
        @if (Model.Pagination.RowCount > 0)
        {
            <span class="text-muted mt-1">(@Model.Pagination.RowCount.ToString("#,###"))</span>
        }
    </div>
</div>
<div class="card">
    @if (Model.DistrictsList.IsAny())
    {
        int number = 0;
        Status status = null;
        <div class="table-responsive">
            <table class="table table-vcenter card-table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên</th>
                        <th>Mô tả</th>
                        <th>Trạng thái</th>
                        <th>Người tạo</th>
                        <th>Người sửa</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int index = 0; index < Model.DistrictsList.Count; index++)
                    {
                        if (Model.StatusList.IsAny())
                        {
                            status = Status.Static_Get(Model.DistrictsList[index].StatusId, Model.StatusList);
                        }
                        number = index + (Model.Pagination.PageIndex > 0 ? Model.Pagination.PageIndex - 1 : Model.Pagination.PageIndex) * Model.Pagination.PageSize + 1;
                        <tr>
                            <td class="text-muted">@number.ToString("#,###")</td>
                            <td>
                                <div class="row">
                                    <div class="col">
                                        @Model.DistrictsList[index].Name
                                    </div>
                                    <small class="text-muted">@Model.DistrictsList[index].ProvinceName</small>
                                </div>
                            </td>
                            <td>@Model.DistrictsList[index].Description</td>
                            <td>
                                @if (status != null && !string.IsNullOrWhiteSpace(status.Name))
                                {
                                    <span class="badge @status.StatusId.ActionStatusBootstrap()">@status.Name</span>
                                }
                            </td>
                            <td class="text-muted">
                                <div class="row">
                                    <div class="col">
                                        <div class="text-truncate">
                                            <strong>@Model.DistrictsList[index].CreatedBy</strong>
                                        </div>
                                        <div class="text-muted">@Model.DistrictsList[index].CrDateTime.TimeAgo()</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-muted">
                                <div class="row">
                                    <div class="col">
                                        <div class="text-truncate">
                                            <strong>@Model.DistrictsList[index].UpdatedBy</strong>
                                        </div>
                                        <div class="text-muted">@Model.DistrictsList[index].UpdDateTime.TimeAgo()</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="btn-list flex-nowrap">
                                    <a href="javascript:void(0)" class="edit-form" title="@string.Format("Cập nhật thông tin {0}", Model.DistrictsList[index].Name)" data-w="600" data-url="@Url.Action("Edit", "District", new { Area = "Admin", DistrictId = Model.DistrictsList[index].DistrictId })">
                                        <span class="nav-link-icon d-md-none d-lg-inline-block">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"></path>
                                                <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"></path>
                                                <path d="M16 5l3 3"></path>
                                            </svg>
                                        </span>
                                    </a>
                                    <a href="javascript:void(0)" class="delete-item" data-url="@Url.Action("Erase", "District", new { Area = "Admin", DistrictId = Model.DistrictsList[index].DistrictId })" title="@string.Format("Xóa Quận / Huyện {0}", Model.DistrictsList[index].Name)">
                                        <span class="nav-link-icon d-md-none d-lg-inline-block text-danger">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <line x1="4" y1="7" x2="20" y2="7"></line>
                                                <line x1="10" y1="11" x2="10" y2="17"></line>
                                                <line x1="14" y1="11" x2="14" y2="17"></line>
                                                <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"></path>
                                                <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"></path>
                                            </svg>
                                        </span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Partial("PartialPagination", Model.Pagination)
        </div>
    }
    else
    {
        <div class="col-12">
            <div class="card card-md">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-10">
                            <div class="text-muted">
                                Không tìm thấy Quận / Huyện phù hợp.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
