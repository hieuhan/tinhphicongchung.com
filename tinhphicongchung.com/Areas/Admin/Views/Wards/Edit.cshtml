@using tinhphicongchung.com.helper
@using tinhphicongchung.com.library
@model WardEditVM
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Cập nhật Phường / Xã</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Wards", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.WardId)
                    <div class="form-group mb-3 row">
                        <label class="col-3 col-form-label required">Quận / Huyện</label>
                        <div class="col">
                            @Html.DropDownListFor(m => m.DistrictId, new SelectList(Model.DistrictsList, "DistrictId", "Description", Model.DistrictId).AddDefaultOption("-- Chọn Quận / Huyện --", "0"), new { id = "EditForm_DistrictId", @class = "form-control select2 js" })
                            @Html.ValidationMessageFor(m => m.DistrictId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group mb-3 row">
                        <label class="col-3 col-form-label">Cấp</label>
                        <div class="col">
                            @Html.DropDownListFor(m => m.Prefix, new SelectList(Model.WardPrefixsList, "Name", "Name", Model.Prefix).AddDefaultOption("-- Chọn Cấp --", ""), new { id = "EditForm_Prefix", @class = "form-control select2 js" })
                        </div>
                    </div>
                    <div class="form-group mb-3 row">
                        <label class="col-3 col-form-label required">Tên Phường / Xã</label>
                        <div class="col">
                            @Html.TextBoxFor(t => t.Name, new { @class = "form-control", autocomplete = "new-password" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group mb-3 row">
                        <label class="col-3 col-form-label">Mô tả</label>
                        <div class="col">
                            @Html.TextBoxFor(t => t.Description, new { @class = "form-control", autocomplete = "new-password" })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group mb-3 row">
                        <label class="col-3 col-form-label">Trạng thái</label>
                        <div class="col">
                            @Html.DropDownListFor(m => m.StatusId, new SelectList(Model.StatusList, "StatusId", "Description", Model.StatusId), new { id = "EditForm_StatusId", @class = "form-control select2 js" })
                        </div>
                    </div>
                    <div class="form-group mb-3 row">
                        <label class="col-3 col-form-label">Thứ tự hiển thị</label>
                        <div class="col">
                            @Html.TextBoxFor(t => t.DisplayOrder, new { @class = "form-control display-order" })
                            @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex">
                            <a href="javascript:void(0)" title="Đóng" data-toggle-target="#_editForm" class="btn btn-link">Đóng</a>
                            <button type="submit" class="btn btn-primary ms-auto">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-device-floppy" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                    <path d="M6 4h10l4 4v10a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2"></path>
                                    <circle cx="12" cy="14" r="2"></circle>
                                    <polyline points="14 4 14 8 8 8 8 4"></polyline>
                                </svg>
                                Lưu thay đổi
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

