@using tinhphicongchung.com.helper
@using tinhphicongchung.com.library
@using tinhphicongchung.com.Areas.Admin.Services.Extensions
@model PageVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                @using (Html.BeginForm("Edit", "Page", new { area = "Admin" }, FormMethod.Post, new { @class = "card", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.PageId)
                    <div class="card-header">
                        <h4 class="card-title">Thông tin website</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-4">
                                <div class="row">
                                    <div class="col-md-6 col-xl-12">
                                        <div class="mb-3">
                                            <label class="form-label required">Tên website</label>
                                            @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Mô tả</label>
                                            @Html.TextBoxFor(t => t.Description, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Email</label>
                                            @Html.TextBoxFor(t => t.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Tel</label>
                                            @Html.TextBoxFor(t => t.Tel, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Tel, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Fax</label>
                                            @Html.TextBoxFor(t => t.Fax, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Fax, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Hotline</label>
                                            @Html.TextBoxFor(t => t.Hotline1, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Hotline1, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Hotline 2</label>
                                            @Html.TextBoxFor(t => t.Hotline2, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Hotline2, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4">
                                <div class="row">
                                    <div class="col-md-6 col-xl-12">
                                        <div class="mb-3">
                                            <label class="form-label">Hotline 3</label>
                                            @Html.TextBoxFor(t => t.Hotline3, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Hotline3, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Địa chỉ</label>
                                            @Html.TextBoxFor(t => t.Address, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Facebook</label>
                                            @Html.TextBoxFor(t => t.Facebook, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Facebook, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Twitter</label>
                                            @Html.TextBoxFor(t => t.Twitter, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Twitter, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">LinkedIn</label>
                                            @Html.TextBoxFor(t => t.LinkedIn, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.LinkedIn, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Youtube</label>
                                            @Html.TextBoxFor(t => t.Youtube, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Youtube, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Tiêu đề SEO</label>
                                            @Html.TextBoxFor(t => t.MetaTitle, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.MetaTitle, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4">
                                <div class="row">
                                    <div class="col-md-6 col-xl-12">
                                        <div class="mb-3">
                                            <label class="form-label">Mô tả SEO</label>
                                            @Html.TextBoxFor(t => t.MetaDescription, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.MetaDescription, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Từ khóa SEO</label>
                                            @Html.TextBoxFor(t => t.MetaKeyword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.MetaKeyword, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Canonical</label>
                                            @Html.TextBoxFor(t => t.CanonicalTag, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.CanonicalTag, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Thẻ H1</label>
                                            @Html.TextBoxFor(t => t.H1Tag, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.H1Tag, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Ảnh đại diện</label>
                                            @Html.HiddenFor(x => x.ImagePath, new { @class = "hidden-file-selected" })
                                        </div>
                                        <div class="mb-3">
                                            <div class="col-md-12">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <img src="@Model.ImagePath.GetImageUrl_Mobile()" class="rounded-circle avatar avatar-lg select-file" title="Chọn ảnh" alt="@Model.Name.DefaultIfEmpty()" />
                                                    </div>
                                                    <div class="mt-3">
                                                        <label class="form-check form-switch">
                                                            <input name="RemoveImage" class="form-check-input" type="checkbox" />
                                                            <span class="form-check-label">Không sử dụng ảnh</span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 frm-box-group">
                                <label class="form-label">Seo Footer</label>
                                <div class="control-editer">
                                    <a href="javascript:void(0)" title="chọn Ảnh" class="select-file" data-type="editor">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-photo" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <line x1="15" y1="8" x2="15.01" y2="8"></line>
                                            <rect x="4" y="4" width="16" height="16" rx="3"></rect>
                                            <path d="M4 15l4 -4a3 5 0 0 1 3 0l5 5"></path>
                                            <path d="M14 14l1 -1a3 5 0 0 1 3 0l2 2"></path>
                                        </svg>
                                    </a>
                                </div>
                                @Html.TextAreaFor(t => t.SeoFooter, new { @class = "js-ckeditor" })
                                @Html.ValidationMessageFor(m => m.SeoFooter, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <div class="d-flex">
                            <a href="javascript:void(0)" title="Quay lại" data-url="@Url.Action("Edit", "Page", new { Area = "Admin" })" class="btn btn-link go-back">Quay lại</a>
                            <button type="submit" class="btn btn-primary ms-auto">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-device-floppy" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                    <path d="M6 4h10l4 4v10a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2"></path>
                                    <circle cx="12" cy="14" r="2"></circle>
                                    <polyline points="14 4 14 8 8 8 8 4"></polyline>
                                </svg>
                                Lưu thay đổi
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>