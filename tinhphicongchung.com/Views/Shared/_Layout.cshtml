@model BaseViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Html.Raw(Model.WebsiteTitle)</title>
    <meta name="description" @Html.Raw(Model.MetaDescription) />
    <meta name="keywords" @Html.Raw(Model.MetaKeywords) />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="@Model.WebsiteCanonical" />
    <link rel="shortcut icon" href="/assets/images/favicon.ico" type="image/x-icon" />
    <link href="/assets/fonts/font.css" rel="stylesheet" />
    <link href="/assets/css/main.css" rel="stylesheet" />
    <link href="/assets/libs/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="/assets/fonts/icons-fonts/awesome-icons.css" rel="stylesheet" />
    <link href="/assets/libs/select2/select2.min.css" rel="stylesheet" />
    <link href="/areas/admin/assets/libs/toastr/toastr.css" rel="stylesheet" />
</head>
<body>
    @Html.Action("PartialHeader", "Shared", new { baseViewModel = Model })
    <main class="main">
        @RenderBody()
    </main>
    @Html.Action("PartialFooter", "Shared", new { baseViewModel = Model })
    <!-- Load Facebook SDK for JavaScript -->
    <div id="fb-root"></div>
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                xfbml: true,
                version: 'v6.0'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/vi_VN/sdk/xfbml.customerchat.js';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
    <!-- Your customer chat code -->
    <div class="fb-customerchat"
         attribution=setup_tool
         page_id="109138344122175"
         logged_in_greeting="Văn phòng công chứng giúp gì được cho Anh/chị ạ? Liên Hệ hotline: 0966227979"
         logged_out_greeting="Văn phòng công chứng giúp gì được cho Anh/chị ạ? Liên Hệ hotline: 0966227979">
    </div>
    <!-- End -->
    <script src="/assets/libs/jquery/jquery.min.js" defer></script>
    <script src="/assets/libs/jquery-validate/jquery.validate.js" defer></script>
    <script src="/assets/libs/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js" defer></script>
    <script src="/assets/libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" defer></script>
    <script src="/assets/libs/select2/select2.min.js" defer></script>
    <script src="/areas/admin/assets/libs/toastr/toastr.js" defer></script>
    <script src="/assets/js/navigation.js" defer></script>
    <script src="/assets/js/app.js?v=171120221023" defer></script>
    @RenderSection("scripts", required: false)
</body>
</html>